// server/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  CLUB_ADMIN
  STUDENT
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  // 1. Make Password Optional (add '?') because Google users won't have one
  password  String?  
  
  role      Role     @default(STUDENT)
  
  // Relations
  club          Club?
  registrations Registration[]
  memberships   Membership[]   // List of clubs they have joined

  // --- NEW SECURITY FIELDS ---
  // 2. Add Google ID field (Must be unique to look up users)
  googleId              String?   @unique
  avatar                String?

  isVerified            Boolean   @default(false)
  verificationToken     String?
  resetPasswordToken    String?
  resetPasswordExpires  DateTime?
  // ---------------------------
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  clubRequests  ClubRequest[] // Relation to requests
}

model Club {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  adminId     String   @unique
  admin       User     @relation(fields: [adminId], references: [id])
  events      Event[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  members     Membership[]   // List of students who joined
  announcements Announcement[]
  logoUrl     String?  // Small square logo
  bannerUrl   String?  // Large background banner
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String?
  date        DateTime
  location    String
  capacity    Int      @default(50)
  
  clubId      String
  club        Club     @relation(fields: [clubId], references: [id])
  
  registrations Registration[] // <--- Event has many registrations
  imageUrl    String?  // Event Poster

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// THE NEW JUNCTION TABLE
model Registration {
  id        String   @id @default(uuid())
  
  studentId String
  student   User     @relation(fields: [studentId], references: [id])
  
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id])
  
  registeredAt DateTime @default(now())

  attended  Boolean  @default(false)

  // Ensure a student can't register for the same event twice
  @@unique([studentId, eventId]) 
}

//Add Request Status Enum
enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

// 4Create the ClubRequest Model
model ClubRequest {
  id          String        @id @default(uuid())
  name        String
  description String?
  
  status      RequestStatus @default(PENDING)
  
  studentId   String
  student     User          @relation(fields: [studentId], references: [id])
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Membership {
  id        String   @id @default(uuid())
  
  student   User     @relation(fields: [studentId], references: [id])
  studentId String
  
  club      Club     @relation(fields: [clubId], references: [id])
  clubId    String
  
  joinedAt  DateTime @default(now())

  // Ensure a student can't join the same club twice
  @@unique([studentId, clubId])
}

model Announcement {
  id        String   @id @default(uuid())
  title     String
  message   String
  date      DateTime @default(now())
  
  clubId    String
  club      Club     @relation(fields: [clubId], references: [id])
}